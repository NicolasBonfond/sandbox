{% extends 'base.html.twig' %}

{% block title "Listes des recettes" %}
{% block body %}
    <h1>Liste des recettes</h1>

    <table class="table">
        <thead>
            <tr>
                <th> Recettes </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td> {{ recipe.title }} </td>
                    <td>
                        <a class="btn btn-primary" href="{{ url('recipe.show', {'id': recipe.id, 'slug': recipe.slug}) }}">Voir</a>
                        <a class="btn btn-secondary" href="{{ url('recipe.edit', {'id': recipe.id}) }}">Éditer</a>
                        <a class="btn btn-danger" href="{{ url('recipe.delete', {'id': recipe.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div>
        <a class="btn btn-primary" href="{{ url('recipe.create') }}">Créer une nouvelle recette</a>
    </div>
{% endblock %}